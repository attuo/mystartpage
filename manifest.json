{
    
    "manifest_version": 2,
    "name": "MyStartPage",
    "version": "1.0",

    "description": "Useful home and new tab page",

    "icons": {
        "48": "src/icons/icon-48.png"
    },
    
    "permissions": [
        "activetab",
        "tabs",
        "storage"
    ],

    "browser_action": {
        "default_icon": "src/icons/icon-48.png",
        "default_title": "mystartpage",
        "default_popup": "src/popup/popup.html"
    },

    "background": {
            "scripts": ["src/background.js"]
    }
    
    
}